<div class="users_show">
    <h1>ユーザー情報確認</h1>
    
    <%= form_with model: @user, method: :post, local: true, class: "input_form" do |form| %>
        <div class="field">
            <div class="field-label"><%= form.label :name, '名前' %></div>
            <div class="field-form"><%= form.text_field :name, readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :email, 'メールアドレス' %></div>
            <div class="field-form"><%= form.text_field :email, readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :height, '身長(cm)' %></div>
            <div class="field-form"><%= form.number_field :height, step: 0.1, pattern: "\d{1,3}(\.\d{0,1})?", readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :weight, '体重(kg)' %></div>
            <div class="field-form"><%= form.number_field :weight, step: 0.1, pattern: "\d{1,3}(\.\d{0,1})?", readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :age, '年齢' %></div>
            <div class="field-form"><%= form.number_field :age, min: 0, max:130, readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :sex, '性別' %></div>
            <div class="field-form"><%= form.text_field :sex, readonly: true %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :password, 'パスワード(8文字以上)' %></div>
            <div class="field-form"><%= form.text_field :password, value: "**********", readonly: true %></div>
            <p>(上記の文字数と実際のパスワードの文字数は無関係です)</p>
        </div>

        <%= link_to "登録内容変更はこちら", edit_user_path, class: "button orange-gradient" %>
    
    <% end %>

</div>
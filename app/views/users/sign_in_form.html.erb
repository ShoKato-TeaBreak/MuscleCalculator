<div class="sign_in_form">
    <h1>ログイン</h1>
    
    <% if flash[:error_message] %>
        <p class="error_message"><%= flash[:error_message] %></p>
    <% end %>

    <%= form_with url:"/users/sign_in", method: :post, local:true  do |form| %>
        <%= form.label :email, 'メールアドレス' %>
        <%= form.text_field :email, value: flash[:email] %>

        <%= form.label :password, 'パスワード' %>
        <%= form.password_field :password %>

        <%= form.submit 'ログイン' %>
    <% end %>
</div>
<div class="sign_in_form">
    <h1>ログイン</h1>
    
    <% if flash[:error_message] %>
        <p class="error_messages"><%= flash[:error_message] %></p>
    <% end %>

    <%= form_with url:"/users/sign_in", method: :post, local:true, class: "input_form"  do |form| %>

        <div class="field">
            <div class="field-label"><%= form.label :email, 'メールアドレス' %></div>
            <div class="field-form"><%= form.text_field :email, value: flash[:email] %></div>
        </div>

        <div class="field">
            <div class="field-label"><%= form.label :password, 'パスワード' %></div>
            <div class="field-form"><%= form.password_field :password %></div>
        </div>

        <div class="actions">
            <%= form.submit 'ログイン', class: "button blue-gradient"%>
        </div>
    <% end %>
</div>